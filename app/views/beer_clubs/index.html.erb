
<h1>Beer Clubs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Founded</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><button type="button" class="btn btn-light"><%= link_to beer_club.name, beer_club %></button></td>
        <td><%= beer_club.founded %></td>
        <td><button type="button" class="btn btn-light"><%= beer_club.city %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer Club', new_beer_club_path, class:"btn btn-primary") if current_user %>
