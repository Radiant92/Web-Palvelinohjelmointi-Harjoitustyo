
<table class="table table-hover">
  <thead>
  <tr>
    <th><%= link_to 'Name', breweries_path(order:"name") %></th>
    <th><%= link_to 'Year', breweries_path(order:"year") %></th>
     <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% breweries.each do |brewery| %>
      <tr>
        <td><button type="button" class="btn btn-light"><%= link_to brewery.name, brewery %></button></td>
        <td><%= brewery.year %></td>
        
        <td></td>
      </tr>
  <% end %>
  </tbody>
</table>
