
<p> Number of beers: <%= @brewery.beers.count %> </p>
<p>
  <h2><%= @brewery.name %>
  <% if not @brewery.active  %>
    <span class="badge badge-info">retired</span>
  <% end %>
  </h2>
</p>

<p>
  <i>Established at
  <%= @brewery.year %></i>
</p>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>
<p>
<h5>Beers</h5>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer ,class:"btn btn-light"%>
 <% end %>
</p>
<p>
<% if @brewery.ratings.empty? %>
This brewery has not received any ratings!
<% else %>
Brewery has <%=pluralize( @brewery.ratings.count, "rating")%>, average <%= round(@brewery.average_rating) %>
<% end %>
</p>
<%= edit_and_destroy_buttons(@brewery) %>
<%= link_to 'Back', breweries_path, class:"btn btn-light" %>
