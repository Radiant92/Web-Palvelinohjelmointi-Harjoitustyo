<h1>Beer places search</h1>



<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table>
    <thead>
      <% Place.rendered_fields.each do |field| %>
        <th><%= field %></th>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <% Place.rendered_fields.each do |field| %>
          <% if field == :name%>
          <td><button type="button" class="btn btn-ligth"><%= link_to place.send(field), place_path(place.id) %></button></td>
          <% else %> 
          <td><button type="button" class="btn btn-ligth"><%= place.send(field) %></button></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>
<% end %>