
<h1>Users</h1>

<table tableclass="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><button type="button" class="btn btn-link"><%= link_to user.username, user %></button></td>
        <% if current_user && current_user.admin && user.locked %>
        <td><span class="badge badge-warning">account closed</span></td>
      <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:"btn btn-primary" %>
