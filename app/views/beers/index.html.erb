
<h1>Beers</h1>

<table tableclass="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><button type="button" class="btn btn-light"><%= link_to beer.name, beer %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to beer.style.name, beer.style %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to beer.brewery.name, beer.brewery %></button></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path, class:"btn btn-primary") if current_user %> <%=link_to 'list of breweries', breweries_path, class:"btn btn-primary" %>
